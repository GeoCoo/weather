<resources>
    <!-- Base application theme. -->
    <style name="Theme.Weather" parent="Theme.MaterialComponents.Light">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Weather.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Weather.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/search_cursor</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.Weather">
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="Theme.App.Starting.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.App.Starting.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>