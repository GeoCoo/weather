<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="coo.apps.weather.fragments.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_maps"
            app:destination="@id/navigation_maps" />
        <action
            android:id="@+id/action_navigation_home_to_navigation_settings"
            app:destination="@id/navigation_settings" />
    </fragment>

    <fragment
        android:id="@+id/navigation_maps"
        android:name="coo.apps.weather.fragments.MapsFragment"
        android:label="@string/title_maps"
        tools:layout="@layout/fragment_maps" >

        <action
            android:id="@+id/action_navigation_maps_to_navigation_actions"
            app:destination="@id/navigation_actions" />
    </fragment>

    <fragment
        android:id="@+id/navigation_locations"
        android:name="coo.apps.weather.fragments.LocationsFragment"
        android:label="@string/title_locations"
        tools:layout="@layout/fragment_locations" >

    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="coo.apps.weather.fragments.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_navigation_settings_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>


    <dialog
        android:id="@+id/navigation_actions"
        android:name="coo.apps.weather.fragments.ActionsFragment"
        tools:layout="@layout/bottomsheet_dialog" >
        <action
            android:id="@+id/action_navigation_actions_to_navigation_locations"
            app:destination="@id/navigation_locations" />
        <action
            android:id="@+id/action_navigation_actions_to_navigation_home"
            app:destination="@id/navigation_home" />
    </dialog>

</navigation>