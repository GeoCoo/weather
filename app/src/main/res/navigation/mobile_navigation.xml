<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mobile_navigation"
        app:startDestination="@+id/navigation_home">

    <fragment
            android:id="@+id/navigation_home"
            android:name="coo.apps.weather.fragments.HomeFragment"
            android:label="@string/title_home"
            tools:layout="@layout/fragment_home" />

    <fragment
            android:id="@+id/navigation_maps"
            android:name="coo.apps.weather.fragments.MapsFragment"
            android:label="@string/title_maps"
            tools:layout="@layout/fragment_maps" />

    <fragment
            android:id="@+id/navigation_charts"
            android:name="coo.apps.weather.fragments.ChartsFragment"
            android:label="@string/title_charts"
            tools:layout="@layout/fragment_charts" />
</navigation>